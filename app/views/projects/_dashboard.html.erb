<% if @logs.any? ; date = '' ; ltype = 0 %>

	<div id="logs">

		<% for log in @logs; cur_date = log.created_at.strftime '%A, %d %B %Y'  %>

			<% if date != cur_date %>
				<div class="date"><%=cur_date%></div>
			<% date = cur_date; ltype = 0; end %>

			<% if ltype != log.ltype %>
				<div class="type type<%=log.ltype%>">
					<span><%=Log::Type.to_list.keys[log.ltype-1]%></span>
				</div>
			<% ltype = log.ltype; end %>
				
			<div class="log">
				<img src="<%=(not log.author.avatar.nil?) ? '/upload/avatars/'+log.author.avatar : '/assets/default_avatar.jpg'%>" alt="<%=log.author.name%>" />
				<div class="info">
					<% if log.ltype == Log::Type::NEW_COMMIT %>
						<a href="LINK_DO_COMMITA!!"><%=log.message.nil? || log.message == '' ? 'No comments' : log.message[0..150]%></a><br />
						<span>Commit <a href="LINK_DO_COMMITA!!"><%=log.revision[0..10]%></a> by <%=link_to log.author.name, user_path(log.author)%> at <%=log.created_at.strftime '%H:%M'%></span>
					<% elsif log.ltype == Log::Type::TASK_ASSIGNMENT %>
						<a href="LINK_DO_TASKA!!"><%=log.task.title[0..150]%></a><br />
						<span>Assigned by <%=link_to log.author.name, user_path(log.author)%> at <%=log.created_at.strftime '%H:%M'%></span>
					<% elsif log.ltype == Log::Type::DEPLOYMENT_FAILED %>
						<%=link_to "Deployment failed", project_servers_path(log.project)%><br />
						<span>Deployed by <%=link_to log.author.name, user_path(log.author)%> at <%=log.created_at.strftime '%H:%M'%></span>
					<% end %>
				</div>
			</div>
		<% end %>

	</div>
		
<% else %>

	<p>There is no recent activity to show.</p>

<% end %>